
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.snow.css" rel="stylesheet" />
</head>
<body class="wrapper">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <partial name="Cookies/_CookieFab" />

    </div>

    @* MODALER*@
    <partial name="Partials/Modals/_CreateProjectModal" model="new ProjectCreateForm()" />
    <partial name="Partials/Modals/_EditProjectModal" model="new ProjectEditForm()" />
    <partial name="Partials/Modals/_EditMemberModal" model="new MemberUpdateForm()" />
    <partial name="Partials/Modals/_DeleteModal" />
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <partial name="Partials/Home/_ChatBubble" />
        <partial name="Partials/Modals/_ChatWindowModal" />
    }
    <partial name="Cookies/_CookieBanner" />
    @* SCRIPS*@
    <script asp-append-version="true" src="~/js/Darkomode.js"></script>
    <script asp-append-version="true" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script asp-append-version="true" src="https://kit.fontawesome.com/f0f7206a66.js" crossorigin="anonymous"></script>
    <script asp-append-version="true" src="~/js/InputError.js"></script>
    <script asp-append-version="true" src="~/js/navigation.js"></script>
    <script asp-append-version="true" src="~/js/ModalHandler.js"></script>
    <script asp-append-version="true" src="~/js/Cookie.js"></script>
    <script asp-append-version="true" src="~/js/Notis.js"></script>
    <script asp-append-version="true" src="~/js/SettingsNavigation.js"></script>
    <script asp-append-version="true" src="~/js/Settings.js"></script>
    <script asp-append-version="true" src="https://cdn.jsdelivr.net/npm/quill@2.0.3/dist/quill.js"></script>
    <script asp-append-version="true" src="~/js/quill-init.js"></script>
    <script asp-append-version="true" src="~/js/transitions.js"></script>
    <script asp-append-version="true" src="~/js/memberPicker.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @*Chat*@
    <script asp-append-version="true" src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script asp-append-version="true" src="~/js/chat.js"></script>
    <script asp-append-version="true" src="~/js/chatRecipientPicker.js"></script>
</body>
</html>
