<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPAssignment</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPAssignment.styles.css" asp-append-version="true" />
</head>
<body class="wrapper">

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script asp-append-version="true" src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script asp-append-version="true" src="https://kit.fontawesome.com/f0f7206a66.js" crossorigin="anonymous"></script>
    <script asp-append-version="true" src="~/js/Darkomode.js"></script>
    <script asp-append-version="true" src="~/js/InputError.js"></script>
    <script asp-append-version="true" src="~/js/navigation.js"></script>
    <script asp-append-version="true" src="~/js/ModalHandler.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
