@{
    <div class="hero">
        <div class="header">
            <h1>Team Members</h1>
            <button class="project-btn" data-bs-toggle="modal" data-bs-target="#addTeamMemberModal">+ Add Team Member</button>
        </div>
        <div class="team-view">
            <div class="project-card">
                <img class="team-img" src="~/img/Employee.svg" alt="">
                <div class="text-info">
                    <h2>John Doe</h2>
                    <h3>Frontend Developer</h3>
                </div>
                <div class="more-container">
                    <button class="more-btn" data-bs-toggle="modal" data-bs-target="#editTeamMemberModal">
