@model ASPAssignment.ViewModels.AdminLoginForm

<div class="log-form-container">
    <h1>Login</h1>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="text-danger mb-3">@ViewBag.ErrorMessage</div>
    }

    <form class="log-form" asp-action="Login" asp-controller="Admin" method="post">
        <p>Email</p>
        <input asp-for="Email" class="form-input" placeholder="Your Email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <p>Password</p>
        <input asp-for="Password" class="form-input" placeholder="Your Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <div class="forgot-password">
            <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
            <label for="rememberMe">Remember Me</label>
            <a href="#">Forgot Password?</a>
        </div>

        <button class="login-btn" type="submit">Login</button>
    </form>

    <p>Not an admin? <a asp-controller="Account" asp-action="Login">Return!</a></p>
</div>





