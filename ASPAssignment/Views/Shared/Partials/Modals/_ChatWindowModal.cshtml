@using System.Security.Claims
@{
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}



<div id="chatModal" class="chat-modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">

                <div class=" chat-modal-container">

                <div class="chat-exit">
                        <button type="button" class="close-btn" aria-label="Close">X</button>
                </div>

                <div class="chat-sidebar">

                </div>

                <div class="chat-view">

                </div>

                <div class="chat-input-container">
                    <form>
                        <input id="chat-input" type="text" placeholder="Enter chat message" />
                        <button type="submit"><i class="fa-solid fa-paper-plane"></i></button>
                    </form>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.currentUserId = "@currentUserId";

        document.addEventListener("DOMContentLoaded", () => {
        const closeBtn = document.querySelector("#chatModal .close-btn");
        const chatModalEl = document.getElementById("chatModal");

        if (closeBtn && chatModalEl) {
            closeBtn.addEventListener("click", () => {
                const modalInstance = bootstrap.Modal.getInstance(chatModalEl)
                    || new bootstrap.Modal(chatModalEl); // fallback om inte instansierad
                modalInstance.hide();
            });
        }
    });
</script>