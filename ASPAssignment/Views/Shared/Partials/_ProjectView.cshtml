@model IEnumerable<ProjectEntity>
<div id="ProjectView">

    <div class="header">
        <h1>Projects</h1>
        <button class="project-btn" data-bs-toggle="modal" data-bs-target="#createprojectModal">+ Add projects</button>
    </div>
    <partial name="Partials/ProjectView/_StatusBar" model="Model"/>


    @if (Model == null || !Model.Any())
    {
        <p>No projects found or failed to load.</p>
    }
    else
    {
        <div class="project-view">
            @foreach (var project in Model)
            {
                <partial name="Partials/_ProjectCard" model="project" />
           }
        </div>
    }
</div>
