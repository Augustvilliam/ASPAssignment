@{
    <div id="createprojectModal" class="project-modal modal fade " tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-body project-container">
                    <div class="form-header">
                        <h1 class="modal-title" id="projectModalLabel">Create Project</h1>
                        <button type="button" class="close-btn" data-bs-dismiss="modal" aria-label="Close">X</button>
                    </div>
                    <button class="upload-btn"><img src="img/upload.svg" alt=""></button>
                    <form class="project-form" method="post">


                        <label for="projectname">Project Name</label>
                        <input id="projectname" placeholder="Project Name" type="text">
                        <span class="text-danger" id="projectNameError"></span>

                        <label for="clientname">Client Name</label>
                        <input id="clientname" placeholder="Client Name" type="text">
                        <span class="text-danger" id="clientNameError"></span>

                        <label for="desc">Description</label>
                        <textarea id="desc" placeholder="Project Descirption" name=""></textarea>
                        <span class="text-danger" id="descriptionError"></span>

                        <div class="date-pick">
                            <label for="startdate">Start Date</label>
                            <input type="date" name="" id="startdate">

                            <label for="endate">End Date</label>
                            <input type="date" name="" id="endate">
                        </div>

                        <label for="member">Members</label>
                        <input id="member" placeholder="Enter Slave Force" type="text">
                        <span class="text-danger" id="membersError"></span>

                        <label for="budget">Budget</label>
                        <input id="budget" placeholder="Hundra tusen miljoner miljarder kronor, och det är mycket pengar" type="text">
                        <span class="text-danger" id="budgetError"></span>

                        <button class="project-form-btn">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div id="editprojectModal" class="project-modal modal fade " tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-body project-container">
                    <div class="form-header">
                        <h1 class="modal-title" id="projectModalLabel">Edit Project</h1>
                        <button type="button" class="close-btn" data-bs-dismiss="modal" aria-label="Close">X</button>
                    </div>
                    <button class="upload-btn"><img src="img/upload.svg" alt=""></button>
                    <form class="project-form" action="">

                        <label for="">Project Name</label>
                        <input placeholder="Project Name" type="text">

                        <label for="">Client Name</label>
                        <input placeholder="Client Name" type="text">

                        <label for="">Description</label>
                        <textarea placeholder="Project Descirption" name="" id=""></textarea>

                        <div class="date-pick">
                            <label for="startdate">Start Date</label>
                            <input type="date" name="" id="startdate">

                            <label for="endate">End Date</label>
                            <input type="date" name="" id="endate">
                        </div>

                        <label for="">Members</label>
                        <input placeholder="Enter Slave Force" type="text">

                        <label for="">Budget</label>
                        <input placeholder="Hundra tusen miljoner miljarder kronor, och det är mycket pengar" type="text">
                        <button class="project-form-btn">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="userModal" class="user-card profile-modal modal fade" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <button class="usersummary">
                        '
                        <img src="/img/userimage.svg" alt="">
                        <p>Villiam Fagrelius</p>
                    </button>
                    <div class="darkmode-box">
                        <span class="dark-mode-lable">Dark mode</span>
                        <label for="darkmode-switch" class="switch">
                            <input type="checkbox" id="darkmode-switch" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                    <button class="btn-custom btn-logout"><a asp-controller="Account" asp-action="Logout">Logout</a></button>
                </div>
            </div>
        </div>
    </div>

    <div id="editTeamMemberModal" class="project-modal modal fade " tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="project-container" tabindex="-1">
                        <div class="form-header">
                            <h1>Edit Member</h1>
                            <button type="button" class="close-btn" data-bs-dismiss="modal" aria-label="Close">X</button>
                            </div>
                        <button type="button" class="upload-btn-team" id="uploadPreviewBtn">
                            <img id="previewImage" src="/img/upload.svg" alt="Profile Image">
                        </button>

                        <form enctype="multipart/form-data" class="project-form" method="post" action="/Member/Update">
                            <input type="hidden" name="Id" id="member-id">
                            <input type="file" name="ProfilePic" id="profilepic" accept="image/*" style="display: none;">

                                <div class="fullname-group">
                                    <label for="">First Name</label>
                                    <input name="FirstName" id="firstname" placeholder="First Name" type="text">

                                    <label for="">Last Name</label>
                                    <input name="LastName" id="lastname" placeholder="Last Name" type="text">
                                </div>

                                <label for="email">Email</label>
                                <input id="email" name="Email" placeholder="Email" type="text" readonly />
                                <small class="form-text">Please contact and Admin for changes of Email...</small>

                                <label for="phone">Phone</label>
                                <input id="phone" name="Phone" placeholder="Phone" type="text" />

                                <label for="jobtitle">Job Title</label>
                                <input id="jobtitle" name="JobTitle" placeholder="Job Title" type="text" />

                                <label for="adress">Adress</label>
                                <input id="adress" name="Adress" placeholder="Address" type="text" />

                                <div class="dob-group">
                                    <label for="">Date of Birth</label>
                                    <input id="day" type="date" placeholder="Day">
                                    <input id="month" type="date" placeholder="Month">
                                    <input id="year" type="date" placeholder="Year">
                                </div>

                                <button class="project-form-btn">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
