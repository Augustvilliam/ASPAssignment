@model ASPAssignment.ViewModels.CreateRole
@{
    ViewData["Title"] = "Skapa ny roll";
}

<h2>Skapa ny roll</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="IsAdmin" class="form-check-input" />
        <label asp-for="IsAdmin" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success">Skapa</button>
</form>