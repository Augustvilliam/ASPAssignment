@model IEnumerable<Data.Entities.ApplicationRole>
@{
    ViewData["Title"] = "Rollhantering";
}

<div class="container py-4">
    <h2 class="mb-3">Rollhantering</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            Ny roll
        </a>
    </p>

    <div class="list-group">
        @foreach (var role in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@role.Name</strong>
                    @if (role.IsAdmin)
                    {
                        <span class="badge bg-secondary ms-2">Admin</span>
                    }
                </div>
                <div>
                    @if (role.Name != "User" && role.Name != "Admin")
                    {
                        <form asp-action="Delete"
                              asp-route-id="@role.Id"
                              method="post"
                              onsubmit="return confirm('Vill du verkligen ta bort rollen?');"
                              class="m-0">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Ta bort
                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>
</div>
