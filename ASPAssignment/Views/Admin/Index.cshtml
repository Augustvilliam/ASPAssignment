@model IEnumerable<Data.Entities.ApplicationRole>

@{
    ViewData["Title"] = "Rollhantering";
}

<partial name="Partials/Settings/_SettingsTopbar" />
<div class="container">

    <h2>Role Management</h2>

    <a class="create-nav-btn" asp-action="Create">
        Add Role
    </a>
    <div class="list-group">
        @foreach (var role in Model)
        {

            <div class="role-display">
                <div>
                    <strong>@role.Name</strong>
                    @if (role.IsAdmin)
                    {
                        <span>Admin Access.</span>
                    }
                </div>

                <div class="delete-display">

                    @if (role.Name != "User" && role.Name != "Admin")
                    {
                        <a asp-action="Edit"
                           asp-route-id="@role.Id"
                           class="create-nav-btn">
                            Edit Role
                        </a>
                        <form asp-action="Delete"
                              asp-route-id="@role.Id"
                              novalidate
                              method="post"
                              onsubmit="return confirm('Are you sure you wish to remove the role?');"
                              class="m-0">
                            <button type="submit" class="btn-delete">
                                Delete Role
                            </button>
                        </form>
                    }
                </div>
            </div>
        }
    </div>
</div>