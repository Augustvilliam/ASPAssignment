@model ASPAssignment.ViewModels.EditRole
@{
    ViewData["Title"] = "Edit role";
}

<partial name="Partials/Settings/_SettingsTopbar" />

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Edit" method="post" class="role-form">
        <input type="hidden" asp-for="Id" />

        <div class="role-form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="role-form-group-admin">
            <input asp-for="IsAdmin" class="form-check-input" />
            <label asp-for="IsAdmin" class="form-check-label"></label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn-role-create">Save</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Abort</a>
        </div>
    </form>
</div>


