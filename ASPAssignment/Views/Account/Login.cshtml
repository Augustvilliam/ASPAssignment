@model LoginForm
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="reg-form-container">
    <h1>Login</h1>
   <button class="media-btn"> 
        <img src="~/img/google-icon.svg" alt=""> 
        <p>Sign in with Google</p> 
   </button> 
    <img class="splitter" src="~/img/splitter.svg" alt="">

    <form class="reg-form" asp-controller="Account" asp-action="Login" method="post" novalidate enctype="multipart/form-data">

        <div>
            @ViewBag?.ErrorMessage
        </div>

        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-input" placeholder="Your Email">

        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-input" placeholder="Your Password">

        <div class="Spacebetween">
           <div>
                <input type="checkbox" name="" id="checkbox1">
                <label for="checkbox1">Remember Me</label>
           </div>

            <a href="#">Forgot Password?</a>
        </div>

        <button class="login-btn">Log in</button>
    </form>
    <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Sign Up</a></p>
</div>

<script src="~/js/Darkmode.js"></script>
